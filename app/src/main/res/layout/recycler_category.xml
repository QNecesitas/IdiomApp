<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:translationZ="8dp"
    app:cardCornerRadius="8dp">



    <!--cl container-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="12dp"
        tools:ignore="RtlSymmetry">

        <!--cv_image-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:translationZ="4dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--IV Picture Car-->
            <ImageView
                android:id="@+id/flag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/colorPrimary"
                android:importantForAccessibility="no"
                android:src="@drawable/baseline_category_24"
                app:tint="?attr/colorOnPrimary" />


        </androidx.cardview.widget.CardView>


        <!--view separator-->
        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_flag"
            app:layout_constraintStart_toEndOf="@id/cv_flag"
            app:layout_constraintTop_toTopOf="parent" />


        <!--tv name flag-->
        <TextView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/Categoria"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/cv_flag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_flag"
            app:layout_constraintTop_toTopOf="@id/cv_flag" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>